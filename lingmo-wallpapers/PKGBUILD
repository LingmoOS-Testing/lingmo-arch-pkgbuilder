# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-wallpapers
arch=("x86_64")
depends=()
makedepends=()
pkgdesc="The system of LingmoOS has built-in wallpaper by default."
pkgrel=0
pkgver=1.0.0
url="https://lingmo.org"
license=("GPL")
source=("https://github.com/Intro-iu/$pkgname/releases/download/v$pkgver/$pkgname.tar.xz")
sha256sums=('SKIP')

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make -j4 || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
