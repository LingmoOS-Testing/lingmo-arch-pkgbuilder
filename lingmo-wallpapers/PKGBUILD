# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-wallpapers
arch=("x86_64")
depends=()
makedepends=("cmake" "extra-cmake-modules" "make" "gcc" "pkgconf")
pkgdesc="The system of LingmoOS has built-in wallpaper by default."
pkgrel=0
pkgver=2.0.0
url="https://lingmo.org"
license=("GPL")
source=("git+https://github.com/LingmoOS/$pkgname.git")
sha256sums=('SKIP')

prepare() {
    cd "$srcdir/$pkgname"
    git checkout "$pkgver-$pkgrel"
}

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make -j8 || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
