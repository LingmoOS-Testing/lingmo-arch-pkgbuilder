# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-cursor-themes
arch=("x86_64")
depends=()
makedepends=("cmake" "extra-cmake-modules" "make" "gcc" "pkgconf")
pkgdesc="Lingmo OS Cursor Themes"
pkgrel=2
pkgver=2.0.0
url="https://lingmo.org"
license=("GPL")
source=("https://github.com/LingmoOS/$pkgname/archive/refs/tags/$pkgver.tar.gz")
sha256sums=('SKIP')

prepare() {
    cd "$srcdir/$pkgname-$pkgver-$pkgrel"
}

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname-$pkgver-$pkgrel/build" && cd "$srcdir/$pkgname-$pkgver-$pkgrel/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make -j$(nproc) || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname-$pkgver-$pkgrel/build"
    make DESTDIR="$pkgdir" install
}
