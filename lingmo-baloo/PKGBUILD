# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-baloo
arch=("x86_64")
depends=(
    "lmdb" "qt5-base" "qt5-quickcontrols2" 
    "networkmanager-qt" "modemmanager-qt" 
    "kcoreaddons5" "kdbusaddons5" 
    "ki18n5" "kidletime5" "solid5" 
    "kfilemetadata5" "kcrash5" "kio5"
)
makedepends=("cmake" "extra-cmake-modules" "make" "gcc" "pkgconf")
pkgdesc="Baloo is the file indexing and file search framework for KDE Plasma."
pkgrel=0
pkgver=1.0.0
url="https://lingmo.org"
license=("GPL")
source=("https://github.com/Intro-iu/$pkgname/releases/download/v$pkgver/$pkgname.tar.xz")
sha256sums=('SKIP')

build() {
    echo "Compiling $pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make -j8 || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
