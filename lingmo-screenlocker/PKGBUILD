# Maintainer: Intro <intro-iu@outlook.com>
pkgname=lingmo-screenlocker
arch=("x86_64")
depends=(
    "qt5-base"
    "qt5-quickcontrols2"
    "qt5-tools"
)
makedepends=("cmake" "extra-cmake-modules" "make" "gcc" "pkgconf")
pkgdesc="Screen locker of LingmoOS."
pkgrel=0
pkgver=1.0.0
url="https://lingmo.org"
license=("GPL")
source=("./$pkgname-main.tar.gz")
sha256sums=('SKIP')

build() {
    echo "Compiling $pkgname"
    mv -v "$pkgname-main" "$pkgname"
    mkdir -pv "$srcdir/$pkgname/build" && cd "$srcdir/$pkgname/build"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
    make -j8 || return 1
}

package() {
    mkdir -pv "$pkgdir"
    cd "$srcdir/$pkgname/build"
    make DESTDIR="$pkgdir" install
}
